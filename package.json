{
  "name": "do-tools-api",
  "version": "0.1.0",
  "description": "The API wrapper over DO UI",
  "type": "module",
  "main": "./dist/main/index.js",
  "exports": {
    ".": {
      "default": "./dist/main/index.js",
      "import": "./dist/main/index.js",
      "types": "./dist/main/index.d.ts"
    },
    "./PlayerManager": {
      "default": "./dist/main/api/player/PlayerManager.js",
      "import": "./dist/main/api/player/PlayerManager.js",
      "types": "./dist/main/api/player/PlayerManager.d.ts"
    }
  },
  "types": "./dist/main/index.d.ts",
  "files": [
    "dist/main"
  ],
  "scripts": {
    "clean": "del dist",
    "dev": "tsc --watch",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm test",
    "test": "node --import tsx --test --experimental-test-coverage --test-coverage-include=src/main/**/*.ts src/test/**/*.test.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DO-Tools/API.git"
  },
  "keywords": [
    "Dugout-Online",
    "football",
    "API",
    "wrapper"
  ],
  "author": {
    "name": "Silviu BURCEA",
    "email": "silviuburcea@gmail.com",
    "url": "https://github.com/silviuburceadev/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DO-Tools/API/issues"
  },
  "homepage": "https://github.com/DO-Tools/API",
  "devDependencies": {
    "@types/node": "^22.8.2",
    "del-cli": "^6.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=22.10.0",
    "npm": ">=10.9.0"
  }
}
